{
  "name": "api",
  "version": "0.5.0",
  "scripts": {
    "dev": "bun run --watch src/index.ts 2>&1 | tee /tmp/spicy-api.log",
    "generate": "bunx --bun @better-auth/cli generate",
    "migrate": "bunx --bun @better-auth/cli migrate",
    "clean": "del-cli node_modules",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "tsc": "sh -c 'tsc --noEmit'"
  },
  "dependencies": {
    "@elysiajs/cors": "1.4.0",
    "arangojs": "10.1.2",
    "better-auth": "catalog:shared",
    "elysia": "1.4.19",
    "@spicygolf/ghin": "0.8.8",
    "jazz-tools": "catalog:shared",
    "spicylib": "workspace:*"
  },
  "devDependencies": {
    "@better-auth/cli": "catalog:shared",
    "del-cli": "7.0.0"
  },
  "module": "src/index.js"
}
