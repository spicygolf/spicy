{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "app/*": ["./src/app/*"],
      "components/*": ["./src/components/*"],
      "hooks/*": ["./src/hooks/*"],
      "navigators/*": ["./src/navigators/*"],
      "providers/*": ["./src/providers/*"],
      "schema/*": ["./src/schema/*"],
      "screens/*": ["./src/screens/*"],
      "utils/*": ["./src/utils/*"],
    }
  },
  "include": [
    "index.js",
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
}
