{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    // Node types needed for: process.env (useApi.ts), Buffer polyfill (polyfills.ts)
    "types": ["node"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["index.js", "src/**/*.ts", "src/**/*.tsx", "package.json"]
}
