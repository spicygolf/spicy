{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "react-native-ide",
      "request": "launch",
      "name": "phone",
      "appRoot": "./packages/phone/",
      "metroConfigPath": "./packages/phone/metro.config.js",
      "suppressMultipleSessionWarning": true,
      "ios": {
        "configuration": "Debug"
      },
      "android": {
        "buildType": "debug"
      }
    },
    {
      "name": "ws",
      "type": "bun",
      "request": "launch",
      "cwd": "${workspaceFolder}/ws",
      "program": "src/index.ts",
      "watchMode": "hot",
      "internalConsoleOptions": "openOnSessionStart",
    },
    {
      "name": "web",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/web",
      "runtimeExecutable": "/Applications/Brave Browser.app/Contents/MacOS/Brave Browser",
      "internalConsoleOptions": "openOnSessionStart",
    },
    {
      "name": "api",
      "type": "bun",
      "request": "launch",
      "cwd": "${workspaceFolder}/api",
      "program": "src/server.ts",
      "watchMode": "hot",
      "internalConsoleOptions": "openOnSessionStart",
    },
    // {
    //   "name": "app ios",
    //   "request": "launch",
    //   "type": "reactnative",
    //   "cwd": "${workspaceFolder}/app",
    //   "platform": "ios",
    //   "runArguments": ["--simulator", "iPhone 14"],
    //   "internalConsoleOptions": "openOnSessionStart"
    // },
    // {
    //   "name": "phone ios",
    //   "request": "launch",
    //   "type": "reactnative",
    //   "cwd": "${workspaceFolder}/phone",
    //   "platform": "ios",
    //   "runArguments": ["--simulator", "iPhone 14"],
    //   "internalConsoleOptions": "openOnSessionStart"
    // },
    {
      "name": "ghin dev testing - bun",
      "type": "bun",
      "request": "launch",
      "cwd": "${workspaceFolder}/api",
      "program": "src/ghin/dev.ts",
      "internalConsoleOptions": "openOnSessionStart",
    },
    {
      "type": "node",
      "request": "launch",
      "name": "app tests",
      "skipFiles": ["<node_internals>/**"],
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/node_modules/.bin/jest",
        "--runInBand"
      ],
      "console": "integratedTerminal",
      "program": "${workspaceFolder}/test/common/utils/score.diff_options_diff_holes.test.js",
      "args": []
    },
    {
      "name": "api schema_update 20210602",
      "type": "node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}/api",
      "args": [
        "--es-module-specifier-resolution=node",
        "./util/arango/schema_updates/20210602.js"
      ]
    },
    {
      "name": "api schema_update 20221219",
      "type": "node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}/api",
      "args": [
        "--es-module-specifier-resolution=node",
        "./util/arango/schema_updates/20221219.js"
      ]
    },
    {
      "name": "api schema_update 20221220",
      "type": "node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}/api",
      "args": [
        "--es-module-specifier-resolution=node",
        "./util/arango/schema_updates/20221220.js"
      ]
    },
    {
      "name": "api schema_update 20231009",
      "type": "bun",
      "request": "launch",
      "cwd": "${workspaceFolder}/api",
      "program": "util/arango/schema_updates/20221220.js",
      "watchMode": "hot",
      "internalConsoleOptions": "openOnSessionStart",
    },
  ]
