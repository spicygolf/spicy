{
  "name": "spicy-mono",
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@types/bun": "latest",
    "del-cli": "7.0.0",
    "husky": "9.1.7",
    "typescript": "5.9.3"
  },
  "license": "FSL-1.1-ALv2",
  "patchedDependencies": {
    "react-native-element-dropdown@2.12.4": "patches/react-native-element-dropdown@2.12.4.patch",
    "react-native-fast-encoder@0.3.1": "patches/react-native-fast-encoder@0.3.1.patch"
  },
  "scripts": {
    "clean": "del-cli node_modules && bun run --filter './packages/*' clean",
    "clean:deep": "del-cli node_modules && bun run --filter './packages/*' clean && bun install",
    "format": "bun run --filter './packages/*' format",
    "format:fix": "bun run --filter './packages/*' format:fix",
    "lint": "bun run --filter './packages/*' lint",
    "lint:fix": "bun run --filter './packages/*' lint:fix",
    "tsc": "bun run --filter './packages/*' tsc",
    "test": "bun test ./packages/app/ ./packages/api/ ./packages/lib/",
    "precommit": "bun format && bun lint && bun tsc",
    "e2e:check": "bun tests/e2e/scripts/check-generated.ts",
    "e2e:generate": "bun tests/e2e/scripts/dsl-to-json.ts --all && bun tests/e2e/scripts/generate-flows.ts",
    "prepare": "husky",
    "validate:seed": "bun run --filter spicylib validate:seed"
  },
  "trustedDependencies": [
    "@apollo/protobufjs",
    "@biomejs/biome",
    "@parcel/watcher",
    "@prisma/client",
    "@prisma/engines",
    "@sveltejs/kit",
    "@swc/core",
    "better-sqlite3",
    "browser-tabs-lock",
    "core-js",
    "core-js-pure",
    "edgedriver",
    "esbuild",
    "fsevents",
    "geckodriver",
    "ghin",
    "husky",
    "prisma",
    "protobufjs",
    "react-native-elements",
    "react-native-nitro-modules",
    "spicygolf"
  ],
  "type": "module",
  "workspaces": {
    "packages": [
      "packages/api",
      "packages/app",
      "packages/lib",
      "packages/web"
    ],
    "catalogs": {
      "shared": {
        "react": "19.2.3",
        "@types/react": "19.2.13",
        "date-fns-tz": "3.2.0",
        "cojson-core-rn": "0.19.22",
        "jazz-tools": "0.19.22"
      }
    }
  },
  "dependencies": {},
  "overrides": {
    "react-native": "0.84.0-rc.5"
  }
}
