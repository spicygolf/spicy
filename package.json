{
  "name": "spicy-mono",
  "license": "FSL-1.1-ALv2",
  "devDependencies": {
    "@biomejs/biome": "^2.1.1",
    "@types/bun": "latest",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "scripts": {
    "clean": "del-cli node_modules",
    "format": "bun run --filter './packages/*' format",
    "format:fix": "bun run --filter './packages/*' format:fix",
    "lint": "bun run --filter './packages/*' lint",
    "lint:fix": "bun run --filter './packages/*' lint:fix",
    "lint-staged": "lint-staged --no-stash",
    "prepare": "husky"
  },
  "lint-staged": {
    "packages/app/**/*.{js,jsx,ts,tsx}": ["bun lint", "bun format"],
    "packages/api/**/*.{js,jsx,ts,tsx}": ["bun lint", "bun format"],
    "packages/ghin/**/*.{js,jsx,ts,tsx}": ["bun lint", "bun format"],
    "packages/lib/**/*.{js,jsx,ts,tsx}": ["bun lint", "bun format"]
  },
  "trustedDependencies": [
    "@apollo/protobufjs",
    "@parcel/watcher",
    "@sveltejs/kit",
    "@swc/core",
    "better-sqlite3",
    "browser-tabs-lock",
    "core-js",
    "core-js-pure",
    "edgedriver",
    "esbuild",
    "fsevents",
    "geckodriver",
    "husky",
    "protobufjs",
    "react-native-elements",
    "react-native-nitro-modules",
    "spicygolf"
  ],
  "type": "module",
  "resolutions": {
    "jazz-tools": "0.15.11"
  },
  "workspaces": [
    "packages/api",
    "packages/app",
    "packages/ghin",
    "packages/lib"
  ],
  "overrides": {
    "typescript": "5.6.2",
    "vitest": "3.1.3"
  }
}
