{
  "name": "spicy-mono",
  "devDependencies": {
    "@biomejs/biome": "^2.3.6",
    "@types/bun": "latest",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "license": "FSL-1.1-ALv2",
  "lint-staged": {
    "packages/app/**/*.{js,jsx,ts,tsx}": [
      "bun lint",
      "bun format",
      "bun tsc"
    ],
    "packages/api/**/*.{js,jsx,ts,tsx}": [
      "bun lint",
      "bun format",
      "bun tsc"
    ],
    "packages/lib/**/*.{js,jsx,ts,tsx}": [
      "bun lint",
      "bun format",
      "bun tsc"
    ]
  },
  "patchedDependencies": {
    "react-native-element-dropdown@2.12.4": "patches/react-native-element-dropdown@2.12.4.patch"
  },
  "scripts": {
    "clean": "del-cli node_modules",
    "format": "bun run --filter './packages/*' format",
    "format:fix": "bun run --filter './packages/*' format:fix",
    "lint": "bun run --filter './packages/*' lint",
    "lint:fix": "bun run --filter './packages/*' lint:fix",
    "tsc": "bun run --filter './packages/*' tsc",
    "test": "bun test ./packages/app/ ./packages/api/ ./packages/lib/",
    "lint-staged": "lint-staged --no-stash",
    "prepare": "husky"
  },
  "trustedDependencies": [
    "@apollo/protobufjs",
    "@biomejs/biome",
    "@parcel/watcher",
    "@prisma/client",
    "@prisma/engines",
    "@sveltejs/kit",
    "@swc/core",
    "better-sqlite3",
    "browser-tabs-lock",
    "core-js",
    "core-js-pure",
    "edgedriver",
    "esbuild",
    "fsevents",
    "geckodriver",
    "ghin",
    "husky",
    "prisma",
    "protobufjs",
    "react-native-elements",
    "react-native-nitro-modules",
    "spicygolf"
  ],
  "type": "module",
  "workspaces": {
    "packages": [
      "packages/api",
      "packages/app",
      "packages/lib"
    ],
    "catalogs": {
      "jazz": {
        "jazz-tools": "link:../jazz/packages/jazz-tools"
      }
    }
  },
  "dependencies": {}
}
